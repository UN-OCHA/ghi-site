{%
  set map_container_classes = [
    'map-container',
    sidebar ? 'has-sidebar',
  ]
%}

<div class="{{ outer_classes }}">
 {{ attachment_select }}
  <div class="plan-attachment-map-wrapper pane-{{ chart_id }} {{ map_type }}">
    {% if sidebar %}
      <div class="pane-sidebar-left">{{ sidebar }}</div>
    {% endif %}
    {% if map_tabs %}
      <div class="map-tabs">{{ map_tabs }}</div>
    {% endif %}
    <div {{ attributes.addClass(map_container_classes) }}">
      {% if legend %}
        <div id="{{ chart_id }}-legend" class="map-legend"><ul></ul></div>
      {% endif %}
      <div id="{{ chart_id }}">
      </div>
    </div>
  </div>
</div>
