{{ attach_library('common_design_subtheme/gho-related-articles') }}

<div class="link-box gho-related-article">
  <div class="field--name-field-thumbnail-image">
    {% if image %}
      {{ image }}
    {% endif %}
  </div>
  <div class="content-wrapper gho-related-article__content">
    <div class="title-wrapper gho-related-article__title">
      <p class="title">{{ title }}</p>
    </div>
    <div class="description-wrapper gho-related-article__summary">
      <div class="description">{{ description }}</div>
      {{ link }}
    </div>
  </div>
</div>