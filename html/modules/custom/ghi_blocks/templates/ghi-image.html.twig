<div class="ghi-image-wrapper">
  {{ image }}
  {% if caption %}
    <div class="image-caption-wrapper">
      <div class="image-caption">
        {{ caption }}
      </div>
    </div>
  {% elseif credit %}
    <div class="image-credit-wrapper cd-container">
      <div class="image-credit">
        {{ credit }}
      </div>
    </div>
  {% endif %}
</div>