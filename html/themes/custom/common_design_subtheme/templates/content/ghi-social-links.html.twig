{% set classes = ['ghi-social-links', ghiSocialLinksClass] %}
{% set socialAttributes = create_attribute() %}

<footer{{ socialAttributes.addClass(classes) }}>
  {% set shareText = label|render|striptags|default(title|render|striptags) %}
  {% set shareMessage = 'Humanitarian Action: '|t ~ shareText %}
  {% set shareUrl = current_url %}
  <div class="ghi-social-links__wrapper content-width">
    <ul>
      <li>
        <a class="ghi-social-links__link ghi-social-links__link--twitter" href="https://twitter.com/intent/tweet?text={{ shareMessage }}%0A%0A{{ shareUrl|url_encode }}">
          <span class="visually-hidden">{{ 'Share on Twitter'|t }}</span>
          {{ icon_twitter|raw }}
        </a>
      </li>
      <li>
        <a class="ghi-social-links__link ghi-social-links__link--facebook" href="https://www.facebook.com/sharer/sharer.php?u={{ shareUrl|url_encode }}">
          <span class="visually-hidden">{{ 'Share on Facebook'|t }}</span>
          {{ icon_facebook|raw }}
        </a>
      </li>
      <li>
        <a class="ghi-social-links__link ghi-social-links__link--linkedin" href="https://www.linkedin.com/shareArticle?mini=true&summary={{ shareMessage }}&title={{ label|render|striptags|trim }}&url={{ shareUrl|url_encode }}">
          <span class="visually-hidden">{{ 'Share on LinkedIn'|t }}</span>
          {{ icon_linkedin|raw }}
        </a>
      </li>
      <li>
        <a class="ghi-social-links__link ghi-social-links__link--copy" href="{{ shareUrl }}" data-message="{{ 'URL copied to clipboard'|t }}">
          <span class="visually-hidden">{{ 'Copy URL to clipboard'|t }}</span>
          {{ icon_copyurl|raw }}
        </a>
      </li>
      {% if pdf_download_url %}
      <li>
        <a class="ghi-social-links__link ghi-social-links__link--pdf" href="{{ pdf_download_url }}">
          <span class="visually-hidden">{{ 'Download PDF'|t }}</span>
          {{ icon_pdf|raw }}
        </a>
      </li>
      {% endif %}
    </ul>
  </div>
</footer>
